#include <iostream>
#include <cmath>

float calculate_function_value(float a, float b) {
    return std::abs(a) + 2*sin(b)/(5.5*a);
}

int main() {
    float a, b;
    std::cout << "Enter the value of a: ";
    std::cin >> a;
    std::cout << "Enter the value of b: ";
    std::cin >> b;

    float result = calculate_function_value(a, b);
    std::cout << "The value of the function for a=" << a << ", b=" << b << " is: " << result << std::endl;

    return 0;
}
